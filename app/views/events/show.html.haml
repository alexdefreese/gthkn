%h1= @event.title
.event
  .date
    - if @event.date_occurred >= Date.today
      = "Occurring: " + @event.date_occurred.to_s
    - else
      = "Occurred: " + @event.date_occurred.to_s
  %h2 Event Description
  .description= @event.description

.attendees
  %h2 Attendees
  - if user_signed_in? and !current_user.events.include?(@event)
    #attend-button.right= link_to 'Attend This Event', "attend/#{params[:id]}", class: 'btn btn-large btn-primary'
  %ul
    - @event.users.each do |u|
      %li= link_to u.name, u
