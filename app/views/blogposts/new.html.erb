<h1>New Blogpost</h1>

<%= form_for @blogpost do |f| %>
	<div class="field">
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<%= f.label :content %>
		<%= f.text_area :content, class: "wysihtml5" %>
	</div>
	<div class="actions">
		<%= f.submit "Submit" %>
	</div>
<% end %>
