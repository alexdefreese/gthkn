<h2><%= h @user.name %></h2>
<%= image_tag @user.avatar.url unless @user.avatar_file_name.nil? %>
<% if @user.show_email %>
	<p><b>Email:</b> <%= mail_to @user.email, nil, :encode=>"javascript"%></p>
<% end %>

<% if current_user?(@user) %>
	<%= link_to "edit", edit_user_path(current_user) %>
<% end %>
